{% extends 'base.html.twig' %}

{% block main %}

<h2 class="text-center mt-2">Ajouter le lieu</h2>
<div class="row justify-content-center">
    <div class="col-lg-8">
        {% form_theme lieuForm 'bootstrap_4_layout.html.twig' %}
        {{ form_start(lieuForm) }}
        <div class="form-group">
            <div class="form-group col-md-6 ">
                {{ form_label(lieuForm.ville) }}
                {{ form_widget((lieuForm.ville)) }}
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6 ">
                {{ form_label(lieuForm.nom_lieu) }}
                {{ form_widget((lieuForm.nom_lieu)) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(lieuForm.rue) }}
                {{ form_widget((lieuForm.rue)) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(lieuForm.latitude) }}
                {{ form_widget((lieuForm.latitude)) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(lieuForm.longitude) }}
                {{ form_widget((lieuForm.longitude)) }}
            </div>
        </div>
        <div class="col-md">
            <div class="text-center mt-3">
                <button class="btn btn-outline-success" type="submit">Ajouter</button>
                <a class="btn btn-outline-danger"  href="{{ path('Creation_add', {'id': app.user.id})}}">Retour</a>
            </div>
        </div>

        {{ form_end(lieuForm) }}

    </div>
</div>
{% endblock %}