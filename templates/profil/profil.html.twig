{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block main %}
    <h2 class="text-center mt-2">{{ user.pseudo }}</h2>
        <div>
            <div class="text-center my-2">
                <img src="{{ asset('uploads/photo/'~ user.file) }}" alt="ma photo" class="img-thumbnail">
            </div>

            <div class="form-row ">
                <div class="form-group col-md-6">
                    <label for="prenom" >Pr√©nom</label>
                    <input type="text" value="{{ user.prenom }}" name="prenom" id="prenom" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6 ">
                    <label for="nom" >Nom</label>
                    <input type="text" value="{{ user.nom }}" name="nom" id="nom" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="telephone" >Telephone</label>
                    <input type="text" value="{{ user.telephone }}" name="telephone" id="telephone" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="email" >Email</label>
                    <input type="text" value="{{ user.email }}" name="email" id="email" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="site" >Ville de rattachement</label>
                    <input type="text" value="{{ user.site }}" name="site" id="site" class="form-control" readonly>
                </div>
            </div >

            <div class="text-center mt-3">
                <a class="btn btn-outline-danger"  href="{{ path('sortie_list')}}">Retour</a>
            </div>
        </div>





{% endblock %}