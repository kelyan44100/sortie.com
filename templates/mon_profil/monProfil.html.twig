{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block main %}
    <h2 class="text-center mt-2">Mon profil</h2>

        <form action="{{ path('mon_profil_update', {id: user.id}) }}" method="post">
            <div class="text-center my-2">
            <img src="{{ asset('uploads/photo/'~ app.user.file) }}" alt="ma photo" class="img-thumbnail">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="pseudo" >Pseudo</label>
                    <input type="text" value="{{ app.user.pseudo }}" name="pseudo" id="pseudo" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="email" >Email</label>
                    <input type="text" value="{{ app.user.email }}" name="email" id="email" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="prenom" >Pr√©nom</label>
                    <input type="text" value="{{ app.user.prenom }}" name="prenom" id="prenom" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6 ">
                    <label for="nom" >Nom</label>
                    <input type="text" value="{{ app.user.nom }}" name="nom" id="nom" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="telephone" >Telephone</label>
                    <input type="text" value="{{ app.user.telephone }}" name="telephone" id="telephone" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="site" >Ville de rattachement</label>
                    <input type="text" value="{{ app.user.site }}" name="site" id="site" class="form-control" readonly>
                </div>
            </div>
            <div class="text-center mt-3">
                <button class="btn btn-outline-success " type="submit">Modifier</button>
                <a class="btn btn-outline-danger"  href="{{ path('main')}}">Annuler</a>
            </div>
        </form>





{% endblock %}